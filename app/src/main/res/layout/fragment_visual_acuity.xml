<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <Button
        android:id="@+id/button_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_top"
        android:layout_toEndOf="@+id/button_top"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="@string/right_button" />

    <Button
        android:id="@+id/button_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_top"
        android:layout_toStartOf="@+id/button_top"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:text="@string/left_button" />

    <Button
        android:id="@+id/button_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_button"
        android:textSize="40sp"
        android:layout_below="@id/ViewFlipper"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/button_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_left"
        android:layout_marginTop="20dp"
        android:text="@string/bottom_button"
        android:textSize="40sp"


        android:layout_centerHorizontal="true"/>

    <ViewFlipper
        android:id="@+id/ViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:src="@drawable/e" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:src="@drawable/second" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:src="@drawable/third" />=
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fourth" />
    </ViewFlipper>
</RelativeLayout>